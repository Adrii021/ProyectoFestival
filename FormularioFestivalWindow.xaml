<Window x:Class="ProyectoFestival.FormularioFestivalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Festival" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="TxtNombre" Text="Nombre del Festival" Foreground="Gray" Margin="0,10"
                     GotFocus="TxtNombre_GotFocus" LostFocus="TxtNombre_LostFocus"/>
            <TextBox x:Name="TxtFecha" Text="Fecha del Festival (dd/mm/yyyy)" Foreground="Gray" Margin="0,10"
                     GotFocus="TxtFecha_GotFocus" LostFocus="TxtFecha_LostFocus"/>
            <TextBox x:Name="TxtLugar" Text="Lugar del Festival" Foreground="Gray" Margin="0,10"
                     GotFocus="TxtLugar_GotFocus" LostFocus="TxtLugar_LostFocus"/>
            <Button Content="Aceptar" HorizontalAlignment="Center" Width="100" Margin="10"
                    Click="Aceptar_Click"/>
        </StackPanel>
    </Grid>
</Window>
